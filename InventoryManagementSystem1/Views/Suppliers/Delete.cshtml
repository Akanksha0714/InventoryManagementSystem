@model InventoryManagementSystem1.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h2 class="text-danger">Delete Supplier</h2>

<div class="card mt-3">
    <div class="card-body">

        <h5 class="mb-3">
            Are you sure you want to delete this supplier?
        </h5>

        <div class="mb-3">
            <strong>Name:</strong> @Model.SupplierName <br />
            <strong>Contact:</strong> @Model.ContactNumber
        </div>

        <form asp-action="Delete"
              method="post"
              onsubmit="return confirm('Are you sure you want to delete this supplier?');">

            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="SupplierID" />

            <button type="submit" class="btn btn-danger">
                Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                Cancel
            </a>
        </form>

    </div>
</div>

