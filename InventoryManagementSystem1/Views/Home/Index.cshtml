<div class="d-flex justify-content-center align-items-center"
     style="min-height: 70vh;">

    <div class="text-center">

        <!-- Welcome To (smaller) -->
        <div class="welcome-text">
            Welcome
            <br />
            To
        </div>

        <!-- Digital Electronics (cursive, big) -->
        <div class="cursive-title">
            Digital Wold
        </div>


        <div class="row mt-5">

            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6>Total Products</h6>
                        <h3>@ViewBag.TotalProducts</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6>Total Categories</h6>
                        <h3>@ViewBag.TotalCategories</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6>Total Suppliers</h6>
                        <h3>@ViewBag.TotalSuppliers</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6>Total Stock</h6>
                        <h3>@ViewBag.TotalStock</h3>
                    </div>
                </div>
            </div>

        </div>




        <!-- Subtitle -->
        <p class="mt-3 subtitle-text">
            Inventory Management System
        </p>

    </div>
</div>
